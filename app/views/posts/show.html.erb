<h2>We are on the show page</h2>


<h2><%= @post.title %></h2>
<p><%= @post.body %></p>

<h2>Comments</h2>
<% @post.comments.each do |comment| %>
  <p>
    <strong><%= comment.commenter %></strong> commented: <i>"<%= comment.body %>"</i>
  </p>
<% end %>

<h2>Add a comment:</h2>
<%= form_for([@post, @post.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>


<%= link_to 'Edit', edit_post_path(@post) %>
<%= link_to 'Back', posts_path %>


<%= render 'index' %>
